<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>


<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_books_path(book.id) %></td>
    <td><%= link_to "Destroy", destroy_books_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
  </tr>
<% end %>

</table>


<h1>New book</h1>

<%= form_for(@book, url: '/book') do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>


